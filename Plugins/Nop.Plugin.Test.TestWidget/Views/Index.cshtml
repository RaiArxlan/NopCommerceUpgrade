@{
    Layout = "";

}
@using Nop.Plugin.Test.TestWidget.Models;

@model List<UsersDataModel>

@*Render data in model in a table using razor*@

<table class="table data-table">
    <tr>
        <th>
            @T("Plugin.Test.TestWidget.Models.UsersDataModel.Fields.Id")
        </th>
        <th>
            @T("Plugin.Test.TestWidget.Models.UsersDataModel.Fields.FullName")
        </th>
        <th>
            @T("Plugin.Test.TestWidget.Models.UsersDataModel.Fields.Email")
        </th>
        <th>
            @T("Plugin.Test.TestWidget.Models.UsersDataModel.Fields.Phone")
        </th>

    </tr>
    @for (int i = 0; i < Model.Count; i++)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => Model[i].Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model[i].FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model[i].Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model[i].Phone)
            </td>
        </tr>
    }
</table>